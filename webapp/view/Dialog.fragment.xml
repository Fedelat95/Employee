<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		id="valueHelpDialog"
		title="{i18n>titleDialog}"
		items="{path: '/Employees'}"
		confirm="onValueHelpClose"
		cancel="onValueHelpClose"
        search="onValueHelpSearch" >
        
		<StandardListItem
			title="{EmployeeID}"
			description="{FirstName} {LastName}" />
	</SelectDialog>
</core:FragmentDefinition>